<ul>
  <% @articles.each do |article| %>
  <li>
      <%= link_to(article.title, article_path(article)) %></li>
      <p><%= article.content %></p>
      <%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: 'Do you really want to?' } %>
      <%= link_to 'Edit', edit_article_path(article) %>
  <% end %>
</ul>
